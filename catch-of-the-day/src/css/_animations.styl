/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  transition .5s
  opacity 0
  &.order-enter-active
    transform translateX(0)
    max-height 60px
    padding 2rem 0 !important
    opacity 1

.order-exit
  transform translateX(0)
  max-height 60px
  padding 2rem 0 !important
  transition .5s
  opacity 1
  &.order-exit-active
    transform translateX(120%)
    max-height 0
    padding 0 !important
    opacity 0

.count-enter
  transform translateY(100%)
  transition .5s
  &.count-enter-active
    transform translateY(0)

.count-exit
  transform translateY(0)
  transition .5s
  position absolute
  top 0
  left 0
  &.count-exit-active
    transform translateY(-100%)